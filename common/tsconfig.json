{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@front/*": ["../frontend/src/*"],
      "@back/*": ["../backend/src/*"],
      "@common/*": ["../common/*"],
    },
  }
}